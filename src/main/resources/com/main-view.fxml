<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.chart.LineChart?>
<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="768.0"
         prefWidth="1024.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/17.0.12"
         xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controllers.Controller">
    <Tab text="Граф">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="768.0" prefWidth="1024.0">
            <HBox fx:id="graphBox" layoutX="14.0" layoutY="15.0" prefHeight="710.0" prefWidth="995.0" spacing="20.0">
                <VBox prefHeight="710.0" prefWidth="184.0" spacing="20.0">
                    <padding>
                        <Insets top="20.0"/>
                    </padding>
                    <Button mnemonicParsing="false" onAction="#onAddVertex" prefHeight="51.0" prefWidth="184.0"
                            text="Добавить"/>
                    <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onEditSelected"
                            prefHeight="51.0" prefWidth="184.0" text="Изменить"/>
                    <Button layoutX="10.0" layoutY="101.0" mnemonicParsing="false" onAction="#onConnectSelected"
                            prefHeight="51.0" prefWidth="184.0" text="Соединить"/>
                    <Button layoutX="10.0" layoutY="172.0" mnemonicParsing="false" onAction="#onRemoveSelected"
                            prefHeight="51.0" prefWidth="184.0" text="Удалить"/>
                </VBox>
            </HBox>
        </AnchorPane>
    </Tab>
    <Tab text="Решение">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="768.0" prefWidth="1024.0">
            <HBox prefHeight="768.0" prefWidth="1024.0"
                  AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
                  AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

                <VBox fx:id="structuralAnalysisBox" prefWidth="410">
                    <padding><Insets bottom="10" left="10" right="5" top="10"/></padding>
                    <Label text="Структурный анализ" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Separator/>
                    <Button text="Запустить анализ" onAction="#onRunStructuralAnalysis"
                            prefHeight="30.0" style="-fx-padding: 5 10 5 10;"/>
                    <TextArea fx:id="structuralAnalysisText" editable="false" wrapText="true" VBox.vgrow="ALWAYS"
                              style="-fx-control-inner-background: #f9f9f9;"/>
                </VBox>

                <Separator orientation="VERTICAL" style="-fx-padding: 5 0 5 0;"/>

                <VBox fx:id="impulseModelingBox" prefWidth="614" HBox.hgrow="ALWAYS">
                    <padding><Insets bottom="10" left="5" right="10" top="10"/></padding>
                    <Label text="Импульсное моделирование" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <Separator/>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Вектор импульса:"/>
                        <TextField fx:id="impulseVectorField" promptText="Например: 1, 0, 1, 0" HBox.hgrow="ALWAYS"/>
                    </HBox>

                    <Button fx:id="runImpulseButton" text="Запустить моделирование" onAction="#onRunImpulseSimulation"
                            prefHeight="30.0" style="-fx-padding: 5 10 5 10;" alignment="CENTER"/>

                    <!-- Выбор вершин для отображения -->
                    <ScrollPane fx:id="vertexSelectionScrollPane" prefHeight="80" VBox.vgrow="NEVER">
                        <content>
                            <FlowPane fx:id="vertexSelectionPane" />
                        </content>
                    </ScrollPane>

                    <StackPane fx:id="chartContainer" VBox.vgrow="ALWAYS"/>
                </VBox>

            </HBox>
        </AnchorPane>
    </Tab>
</TabPane>
